{% extends "base.html.twig" %}

{% block title %}Mot de passe oubli√© ?{% endblock %}

{% block body %}
<section class="my-32">
    <div class="container">
        <div class="max-w-3xl mx-auto flex flex-col items-center justify-center gap-5">
            <h1 class="text-xl md:text-3xl font-semibold">Reset Password</h1>

            <div class="bg-white p-8 border rounded-xl w-full">
                {{ form_start(form, {
                    attr: {
                        class: 'flex flex-col gap-8'
                    }
                }) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.password) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}