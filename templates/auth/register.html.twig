{% extends "base.html.twig" %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="my-32">
    <div class="container">
        <div class="max-w-3xl mx-auto flex flex-col items-center justify-center gap-5">
            <h1 class="text-xl md:text-3xl font-semibold">Connexion</h1>

            <div class="bg-white p-8 border rounded-xl w-full">
                {{ form_start(form, {
                    attr: {
                        class: 'flex flex-col gap-8'
                    }
                }) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.password) }}
                    <div class="text-sm">
                        <p class="mt-2">
                            Already have an account ? <a href="{{ path('login') }}" class="text-blue-500 transition hover:opacity-70">Login</a>
                        </p>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}